<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="ResultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryResult</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkResult</item>
        <item name="colorAccent">@color/colorAccentReuslt</item>
    </style>

    <style name="ResultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ResultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ResultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ResultsProggressBarColor">
        <item name="colorAccent">@color/colorPrimaryDarkResult</item> <!-- Whatever color you want-->
    </style>

    <style name="ResultActionBarProggressBarColor">
        <item name="colorAccent">@color/colorAccentReuslt</item>
    </style>

</resources>
