<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_below="@id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/from_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/from"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/from_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liptovsky Mikulas"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/to_title"
            android:layout_below="@+id/from_title"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/to"
            android:layout_below="@+id/from_title"
            android:layout_toRightOf="@+id/to_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bratislava"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/lb_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:text="@string/use"
            android:textColor="@color/use_label_text_color"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/use_label_text_color" />

</RelativeLayout>